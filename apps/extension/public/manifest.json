{
  "manifest_version": 3,
  "name": "Vowlt - Bookmark Manager",
  "version": "1.0.0",
  "description": "Save and manage bookmarks with AI-powered tagging and semantic search",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Save to Vowlt"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["storage", "activeTab", "tabs", "notifications", "identity"],
  "host_permissions": ["http://localhost:5000/*", "https://vowlt.com/*"]
}
