# PostgreSQL (Docker internal network)
POSTGRES_HOST=postgres  # Important: Docker service name
POSTGRES_PORT=5432
POSTGRES_DB=vowlt_prod
POSTGRES_USER=vowlt_prod_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# JWT (MUST be different from dev)
JWT_SECRET=CHANGE_ME_RANDOM_32_CHAR_STRING
JWT_ISSUER=vowlt-api
JWT_AUDIENCE=vowlt-web
JWT_EXPIRY_MINUTES=60

# OpenAI
OPENAI_API_KEY=sk-proj-your-production-key

# Application
ASPNETCORE_ENVIRONMENT=Production

# Domain
FRONTEND_URL=https://app.vowlt.app
API_URL=https://api.vowlt.app
