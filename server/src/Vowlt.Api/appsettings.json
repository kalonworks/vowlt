{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "System": "Warning"
    },
    "Console": {
      "FormatterName": "json",
      "FormatterOptions": {
        "SingleLine": false,
        "IncludeScopes": true,
        "TimestampFormat": "yyyy-MM-dd HH:mm:ss.fff ",
        "UseUtcTimestamp": true,
        "JsonWriterOptions": {
          "Indented": true
        }
      }
    }
  },
  "AllowedHosts": "*",
  "Database": {
    "Host": "localhost",
    "Port": 5432,
    "Database": "vowlt",
    "Username": "",
    "Password": ""
  },
  "Embedding": {
    "ServiceUrl": "http://localhost:8000",
    "TimeoutSeconds": 30,
    "MaxRetries": 3,
    "RetryDelayMs": 1000,
    "VectorDimensions": 384
  },
  "Llm": {
    "Provider": "Gemini",
    "Gemini": {
      "Model": "gemini-2.5-flash-lite",
      "BaseUrl": "https://generativelanguage.googleapis.com/v1beta",
      "TimeoutSeconds": 30,
      "MaxRetries": 3
    }
  },
  "MetadataExtraction": {
    "TimeoutSeconds": 15,
    "MaxRetries": 2,
    "RetryDelayMs": 1000,
    "UserAgent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36",
    "MaxContentLengthMb": 5,
    "MaxRedirects": 5,
    "FollowRedirects": true,
    "ExtractFavicon": true
  },
  "Search": {
    "DefaultMode": "Hybrid",
    "RrfK": 60.0,
    "VectorWeight": 0.7,
    "KeywordWeight": 0.3,
    "MaxKeywordResults": 50,
    "MaxVectorResults": 50,
    "MinimumBm25Score": 1.0,
    "MinimumRrfScore": 0.015,
    "EnableCrossEncoderReranking": true,
    "RerankCandidateLimit": 100,
    "MinimumCrossEncoderScore": 0.6
  }
}
