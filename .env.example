# PostgreSQL Configuration
POSTGRES_USER=vowlt_user
POSTGRES_PASSWORD=changeme_use_strong_password
POSTGRES_DB=vowlt
POSTGRES_PORT=5432

# AI Services (get your keys from respective platforms)
OPENAI_API_KEY=sk-proj-your-key-here
# ANTHROPIC_API_KEY=sk-ant-your-key-here

# JWT Configuration
JWT_SECRET=generate-a-random-string-at-least-32-characters-long
JWT_ISSUER=vowlt-api
JWT_AUDIENCE=vowlt-web
JWT_EXPIRY_MINUTES=60

# Rate Limiting Configuration
# Login: Prevents brute force attacks (IP-based)
RateLimits__Login__PermitLimit=5
RateLimits__Login__WindowMinutes=1

# Register: Prevents spam registrations (IP-based)
RateLimits__Register__PermitLimit=3
RateLimits__Register__WindowHours=1

# Refresh: Prevents token enumeration (user-based)
RateLimits__Refresh__PermitLimit=30
RateLimits__Refresh__WindowHours=1


# Application Settings
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:5000
